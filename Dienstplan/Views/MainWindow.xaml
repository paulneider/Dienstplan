<Window x:Class="Dienstplan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dienstplan"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="Dienstplan" 
        WindowStartupLocation="CenterScreen"
        MinHeight="250"
        DataContext="{local:ViewModelProvider Type=local:MainViewModel}"
        Height="{StaticResource WindowHeight}" 
        MinWidth="{StaticResource WindowWidth}"
        Width="{StaticResource WindowWidth}"
        MaxWidth="{StaticResource WindowWidth}">
    <Grid>
        <TabControl>
            <TabItem Header="Dienstplan">
                <local:RosterView DataContext="{Binding RosterViewModel}"/>
            </TabItem>
            <TabItem Header="Mitarbeiter">
                <local:EmployeesView DataContext="{Binding EmployeesViewModel}"/>
            </TabItem>
            <TabItem Header="Gruppen">
                <local:GroupsView DataContext="{Binding GroupsViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
