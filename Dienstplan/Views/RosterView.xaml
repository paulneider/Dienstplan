<UserControl x:Class="Dienstplan.RosterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dienstplan"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:RosterViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource WindowHeight}" 
             d:DesignWidth="{StaticResource WindowWidth}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:WeekSelectorView Grid.RowSpan="4"
                                Panel.ZIndex="10"/>

        <Label Content="{Binding TimeSpanString}"
               Grid.Row="0"
               FontSize="16"/>

        <GroupBox Grid.Row="1">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button Content="Speichern"
                            Command="{Binding SaveCommand}"
                            Margin="3 0"/>
                    <Button Content="Zurücksetzen"
                            Command="{Binding ResetCommand}"/>
                    <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}">
                    </DatePicker>
                </StackPanel>

                
                <Button Content="Woche auswählen"
                        HorizontalAlignment="Right"
                        Command="{Binding ResetCommand}"/>
            </Grid>
        </GroupBox>
        
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="195"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <Label Content="Mitarbeiter"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="8 0 0 0"/>
            <Label Content="Montag"
                   Grid.Row="1"
                   Grid.Column="1"/>
            <Label Content="Dienstag"
                   Grid.Row="1"
                   Grid.Column="2"/>
            <Label Content="Mittwoche"
                   Grid.Row="1"
                   Grid.Column="3"/>
            <Label Content="Donnerstag"
                   Grid.Row="1"
                   Grid.Column="4"/>
            <Label Content="Freitag"
                   Grid.Row="1"
                   Grid.Column="5"/>
            <Label Content="Gesamt"
                   Grid.Row="1"
                   Grid.Column="6"/>

        </Grid>

        <DataGrid Grid.Row="3"
                  Padding="0"
                  Margin="0"
                  HorizontalAlignment="Stretch"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserReorderColumns="False"
                  CanUserDeleteRows="False"
                  ItemsSource="{Binding EmployerItems}">
            <!--<DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="LightBlue"/>
                </Style>
            </DataGrid.RowStyle>-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    IsReadOnly="True"
                                    Width="120"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding Name}"/>
                <DataGridTextColumn Header="TS"
                                    IsReadOnly="True"
                                    Width="25"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding WrittingHours}"/>
                <DataGridTextColumn Header="h/Soll"
                                    IsReadOnly="True"
                                    Width="45"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding Hours}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 2 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 3 0" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Beginn"
                                    IsReadOnly="False"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding MondayStart, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Ende"
                                    IsReadOnly="False"
                                    Width="45"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding MondayEnd, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Pause"
                                    IsReadOnly="True"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding MondayBreak, StringFormat=mm}"/>
                <DataGridTextColumn Header="h"
                                    IsReadOnly="True"
                                    Width="30"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding MondayTime}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 2 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 3 0" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Beginn"
                                    IsReadOnly="False"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding TuesdayStart, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Ende"
                                    IsReadOnly="False"
                                    Width="45"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding TuesdayEnd, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Pause"
                                    IsReadOnly="True"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding TuesdayBreak, StringFormat=mm}"/>
                <DataGridTextColumn Header="h"
                                    IsReadOnly="True"
                                    Width="30"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding TuesdayTime}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 2 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 3 0" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Beginn"
                                    IsReadOnly="False"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding WednesdayStart, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Ende"
                                    IsReadOnly="False"
                                    Width="45"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding WednesdayEnd, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Pause"
                                    IsReadOnly="True"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding WednesdayBreak, StringFormat=mm}"/>
                <DataGridTextColumn Header="h"
                                    IsReadOnly="True"
                                    Width="30"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding WednesdayTime}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 2 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 3 0" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Beginn"
                                    IsReadOnly="False"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding ThursdayStart, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Ende"
                                    IsReadOnly="False"
                                    Width="45"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding ThursdayEnd, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Pause"
                                    IsReadOnly="True"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding ThursdayBreak, StringFormat=mm}"/>
                <DataGridTextColumn Header="h"
                                    IsReadOnly="True"
                                    Width="30"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding ThursdayTime}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 2 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 3 0" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Beginn"
                                    IsReadOnly="False"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding FridayStart, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Ende"
                                    IsReadOnly="False"
                                    Width="45"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding FridayEnd, StringFormat=HH:mm}"/>
                <DataGridTextColumn Header="Pause"
                                    IsReadOnly="True"
                                    Width="50"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding FridayBreak, StringFormat=mm}"/>
                <DataGridTextColumn Header="h"
                                    IsReadOnly="True"
                                    Width="30"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding FridayTime}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 2 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0 0 3 0" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="h"
                                    IsReadOnly="True"
                                    Width="35"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding TotalHours}"/>
                <DataGridTextColumn Header="OT"
                                    IsReadOnly="True"
                                    Width="35"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding OverTime}"/>
                <DataGridTextColumn Header="∑ OT"
                                    IsReadOnly="True"
                                    Width="40"
                                    CanUserResize="False"
                                    CanUserReorder="False"
                                    Binding="{Binding TotalOverTime}"/>
            </DataGrid.Columns>
        </DataGrid>

        
    </Grid>
</UserControl>
